{
  "name": "vow",
  "displayName": "Vow",
  "description": "AI output verification for VS Code - detect AI-generated code, security issues, and hallucinations",
  "version": "0.1.0",
  "publisher": "vow",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "ai",
    "verification",
    "security",
    "linter",
    "hallucination"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:php",
    "onLanguage:swift",
    "onLanguage:kotlin",
    "onLanguage:r",
    "onLanguage:scala",
    "onLanguage:perl",
    "onLanguage:lua",
    "onLanguage:dart",
    "onLanguage:haskell",
    "onLanguage:ruby",
    "onLanguage:markdown",
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vow.checkFile",
        "title": "Vow: Check File"
      },
      {
        "command": "vow.checkWorkspace",
        "title": "Vow: Check Workspace"
      },
      {
        "command": "vow.showReport",
        "title": "Vow: Show Report"
      }
    ],
    "configuration": {
      "title": "Vow",
      "properties": {
        "vow.executablePath": {
          "type": "string",
          "default": "vow",
          "description": "Path to the Vow executable"
        },
        "vow.runOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run Vow check when files are saved"
        },
        "vow.severity": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ],
          "default": "medium",
          "description": "Minimum severity level to display"
        },
        "vow.exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            "target",
            "build",
            "dist"
          ],
          "description": "Patterns to exclude from checking"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  }
}